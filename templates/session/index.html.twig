{% extends 'base.html.twig' %}

{% block title %}Sessions{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/css/table.css') }}">
    <link rel="stylesheet" href="{{ asset('/css/session/index.css') }}">
{% endblock %}

{% block body %}

    <h1>Liste des sessions</h1>
    <table>
        <thead>
            <tr>
                <th colspan="2">Date</th>
                <th>Places</th>
                <th>Places restantes</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th></th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
            {% for formation in formations %}
                <tr class="formation row-link" data-href="{{ path('show_formation', {'id' : formation.id}) }}">
                    <td colspan="6">{{ formation.intitule }}</td>
                </tr>
                {% for session in formation.sessions %}
                <tr class="tablerow-hover row-link" data-href="{{ path('show_session', {'id' : session.id}) }}">
                    <td colspan="2">{{session.getDate}}</td>
                    <td class="places">{{ session.nbPlaces }}</td>
                    <td class="places">{{ (session.nbPlaces - session.getStagiaires|length) }}</td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td>
                            <a class="delete-btn" href="{{ path('delete_session', {'id': session.id}) }}">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </td>
                    {% endif %}
                    
                </tr>
                {% endfor %}
            {% endfor %}

            {# on affiche le bouton d'ajout de nouvelle session si l'utilisateur est connect√© et admin #}
            {% if is_granted('ROLE_ADMIN') %}
                <tr class="tablerow-hover row-link" data-href="{{ path('new_session') }}">
                    <td class="new-btn" colspan="6">
                        <i class="fa-solid fa-plus"></i>
                        Ajouter une nouvelle session
                    </td>
                </tr>
            {% endif %}
        </tbody>
    </table>

{% endblock %}

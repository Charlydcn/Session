{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/css/form.css') }}">
{% endblock %}

{% block body %}
<form method="post">

    <div class="error">
        <p>{{ error ? error.message : "" }}</p>
    </div>

    <h1>Connexion : </h1>
    <label for="inputEmail">Email : </label>
    <input type="email" value="{{ last_username }}" placeholder="dupont.jeanne@exemple.fr" name="email" id="inputEmail" autocomplete="email" required autofocus>
    <label for="inputPassword">Mot de passe :</label>
    <input type="password" placeholder="&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;" name="password" id="inputPassword" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button type="submit">
        Inscription
    </button>
    <p class="security-redirect">Pas encore de compte ? <a class="text-hover" href="{{path('app_register')}}">Inscrivez-vous</a></p>
</form>
{% endblock %}
